!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv': 'Content-Type' }/
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %title ReviewersPrototype
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    - if engineer_signed_in?
      = render 'engineers_navbar'
    - elsif company_signed_in?
      = render 'companies_navbar'
    - else
      = render 'navbar'

    .container-fluid.col-xs-12
      - !content_for?(:flash) && flash && flash.each do |key, message|
        .alert{ class: "alert-key", role: 'alert' }
          %strong= message
      - if engineer_signed_in?
        = render 'engineers_body'
      - elsif company_signed_in?
        = render 'companies_body'
      - else
        = render 'body'
    = yield
